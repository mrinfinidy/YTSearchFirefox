{
    "manifest_version": 2,
    "name": "YouTube Quick Search",
    "version": "0.1",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ], "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js":[
                "content.js",
                "jquery-3.3.1.min.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon16.png",
        "128": "icon128.png"
    }
}
